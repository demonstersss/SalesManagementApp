<Window x:Class="Shop.Universal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Universal" Height="450" Width="800"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ReferenceDataGrid"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="ReferenceDataGrid_AutoGeneratingColumn"
                  IsReadOnly="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  PreviewKeyDown="ReferenceDataGrid_PreviewKeyDown"
                  Grid.Row="0"
                  Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить изменения" 
                    Width="150" Height="35" 
                    Click="SaveButton_Click"
                    FontWeight="SemiBold"/>
            <Button Content="Отмена" 
                    Width="100" Height="35" 
                    Margin="10,0,0,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
